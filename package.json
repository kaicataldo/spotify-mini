{
  "name": "spotify-mini",
  "version": "1.0.0",
  "description": "A macOS menubar controller for Spotify!",
  "scripts": {
    "start": "npm run build -- -p && electron dist/main/index.js",
    "dev": "npm run build && (npm run watch:main & npm run watch:renderer & nodemon --watch dist/main --exec 'electron dist/main/index.js')",
    "lint": "npm run eslint && npm run stylelint",
    "prettier": "prettier --single-quote --write '{,!(dist)/**/}*.{js,ts}'",
    "test": "npm run lint",
    "build": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main",
    "build:renderer": "webpack -p",
    "watch:main": "tsc -w -p src/main",
    "watch:renderer": "webpack --watch",
    "eslint": "eslint --ext .js,.ts,.vue .",
    "stylelint": "stylelint 'src/**/*.vue'"
  },
  "author": "Kai Cataldo <kaicataldo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^8.0.20",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "electron": "^1.7.6",
    "eslint": "^4.4.1",
    "eslint-plugin-vue": "^3.11.0",
    "nodemon": "^1.11.0",
    "postcss-scss": "^1.0.2",
    "precss": "^2.0.0",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-processor-html": "^1.0.0",
    "svg-inline-loader": "^0.8.0",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^5.0.1",
    "vue-loader": "^13.0.4",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.4"
  },
  "dependencies": {
    "normalize.css": "^7.0.0",
    "open-iconic": "^1.1.1",
    "tslib": "^1.7.1",
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  }
}
